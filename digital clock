import tkinter as tk
import time
import datetime

def update_time():
    # Get current time
    current_time = time.strftime("%H:%M:%S")
    clock_label.config(text=current_time)

    # Get current day
    current_day = time.strftime("%A")
    day_label.config(text=current_day)

    # Greeting based on time
    hour = int(time.strftime("%H"))
    if 5 <= hour < 12:
        greeting = "Good Morning 🌞"
    elif 12 <= hour < 18:
        greeting = "Good Afternoon ☀️"
    else:
        greeting = "Good Evening 🌙"

    greet_label.config(text=greeting)

    # Call again after 1 second
    clock_label.after(1000, update_time)


# Create main window
root = tk.Tk()
root.title("Digital Clock")
root.geometry("400x200")
root.config(bg="black")

# Time label
clock_label = tk.Label(root, text="", font=("Arial", 40, "bold"), fg="cyan", bg="black")
clock_label.pack(pady=10)

# Day label
day_label = tk.Label(root, text="", font=("Arial", 20), fg="lightgreen", bg="black")
day_label.pack()

# Greeting label
greet_label = tk.Label(root, text="", font=("Arial", 18, "italic"), fg="yellow", bg="black")
greet_label.pack(pady=10)

# Start the clock
update_time()

# Run GUI loop
root.mainloop()
